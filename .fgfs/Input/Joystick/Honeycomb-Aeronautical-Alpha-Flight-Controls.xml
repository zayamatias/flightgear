    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/switches/master-avionics</property>
      <value>false</value>
    </binding>
  </button>
  <!-- LIGHTS -->
  <!-- BEACON -->
  <button n="20">
    <desc >Beacon ON</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/beacon</property>
      <value >1</value>
      <offset type="double">1</offset>
    </binding>
  </button>
  <button n="21">
    <desc >Beacon OFF</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/beacon</property>
      <value >0</value>
      <offset type="double">1</offset>
    </binding>
  </button>
  <!-- LANDING LIGHTS -->
  <button n="22">
    <desc >Landing Lights ON</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/landing-lights</property>
      <value >1</value>
      <offset type="double">1</offset>
    </binding>
  </button>
  <button n="23">
    <desc >Landing Lights OFF</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/landing-lights</property>
      <value >0</value>
      <offset type="double">1</offset>
    </binding>
  </button>
  <!-- TAXI LIGHTS -->
  <button n="22">
    <desc >Taxi Lights ON</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/taxi-lights</property>
      <value>true</value>
    </binding>
  </button>
  <button n="23">
    <desc >Taxi Lights OFF</desc>
    <repeatable >false</repeatable>
