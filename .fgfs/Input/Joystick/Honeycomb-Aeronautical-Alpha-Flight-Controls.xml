    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/nav-lights</property>
      <value>true</value>
    </binding>
  </button>
  <button n="27">
    <desc >Nav Lights OFF</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/nav-lights</property>
      <value >false</value>
    </binding>
  </button>
  <!-- STROBE LIGHTS -->
  <button n="28">
    <desc >Strobe Lights ON</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/strobe-lights</property>
      <value>true</value>
    </binding>
  </button>
  <button n="29">
    <desc >Strobe Lights OFF</desc>
    <repeatable >false</repeatable>
    <binding>
      <command >property-assign</command>
      <property >/controls/lighting/strobe-lights</property>
      <value >false</value>
    </binding>
  </button>
  <!-- MAGNETOS  -->
  <!-- OFF -->
  <button n="30">
    <desc>Magnetos OFF</desc>
    <binding>
      <command>property-assign</command>
      <property>/controls/engines/engine/magnetos</property>
      <value >0</value>
    </binding>
  </button>
  <!-- RIGHT -->
  <button n="31">
    <desc>Magnetos RIGHT</desc>
    <binding>
      <command>property-assign</command>
      <property>/controls/engines/engine/magnetos</property>
      <value >1</value>
    </binding>
  </button>
  <!-- BUTTONS 32 + 33 ARE NOT HANDLED IN THIS FILE DUE TO LIMITATIONS, THESE ARE LOCATED IN THE EVENT FILE -->
</PropertyList>
